@using company.G03.PL.Models.department
@model DepartmentViweModel

<head>
	<link href="~/css/partialstyle.css" rel="stylesheet" />
</head>
<div class="container">
    <div class="card border-0 shadow-lg rounded-3 overflow-hidden">
        <div class="card-header bg-gradient-primary py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="card-title text-white mb-0">
                    <i class="fas fa-building me-2"></i>Department Information
                </h3>
                @if(Model is not null)
                {
                     <span class="badge bg-white text-primary fs-6">
                    <i class="fas fa-id-card me-1"></i> @Model.Code
                </span>
                }
              
            </div>
        </div>

        <div class="card-body p-4">
            <div class="row g-4">
                <!-- Code Field -->
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Code" class="form-control border-2 border-primary bg-light" placeholder=" " />
                        <label asp-for="Code" class="text-muted fw-medium">
                            <i class="fas fa-hashtag me-1"></i> @Html.DisplayNameFor(m => m.Code)
                        </label>
                        <span asp-validation-for="Code" class="text-danger small mt-1 d-block"></span>
                    </div>
                </div>

                <!-- Name Field -->
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Name" class="form-control border-2 border-primary" placeholder=" " />
                        <label asp-for="Name" class="text-muted fw-medium">
                            <i class="fas fa-tag me-1"></i> @Html.DisplayNameFor(m => m.Name)
                        </label>
                        <span asp-validation-for="Name" class="text-danger small mt-1 d-block"></span>
                    </div>
                </div>

                <!-- Description Field -->
                <div class="col-12">
                    <div class="form-floating">
                        <textarea asp-for="Description" class="form-control border-2 border-primary"
                                  placeholder=" " style="height: 120px"></textarea>
                        <label asp-for="Description" class="text-muted fw-medium">
                            <i class="fas fa-align-left me-1"></i> @Html.DisplayNameFor(m => m.Description)
                        </label>
                    </div>
                </div>

                <!-- Date Field -->
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="date" asp-for="CreatedDate" class="form-control border-2 border-primary" placeholder=" " />
                        <label asp-for="CreatedDate" class="text-muted fw-medium">
                            <i class="far fa-calendar-alt me-1"></i> @Html.DisplayNameFor(m => m.CreatedDate)
                        </label>
                    </div>
                </div>

                <!-- Status Field (Optional Addition) -->
                <div class="col-md-6">
                    <div class="form-floating">
                        <select class="form-select border-2 border-primary" id="status">
                            <option selected>Active</option>
                            <option>Inactive</option>
                        </select>
                        <label for="status" class="text-muted fw-medium">
                            <i class="fas fa-circle me-1"></i> Status
                        </label>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-3 mt-5">
                <a asp-action="Index"  class="btn btn-lg btn-outline-secondary px-4 rounded-pill">
                    <i class="fas fa-times me-2"></i> Cancel
                </a>
                <button type="submit" class="btn btn-lg btn-primary px-4 rounded-pill">
                    <i class="fas fa-save me-2"></i> Save
                </button>
            </div>
        </div>
    </div>
</div>
