@model DepartmentDetailsDTO
@{
    ViewData["Title"] = "Delete Department";
}

<div class="container-fluid px-4 py-4">
    <div class="card border-0 shadow-lg rounded-3 overflow-hidden">
        <!-- Card Header -->
        <div class="card-header bg-danger text-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="h5 mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Delete Department
                    </h2>
                    <p class="small mb-0 opacity-75 mt-1">
                        <i class="fas fa-info-circle me-1"></i> Confirm department deletion
                    </p>
                </div>
                <a asp-action="Index" class="btn btn-outline-light btn-sm rounded-pill shadow-sm">
                    <i class="fas fa-arrow-left me-2"></i>Back to List
                </a>
            </div>
        </div>

        <!-- Card Body -->
        <div class="card-body p-0">
            <!-- Warning Alert -->
            <div class="alert alert-warning m-4">
                <div class="d-flex align-items-center">
                    <i class="fas fa-exclamation-circle me-3 fs-4"></i>
                    <div>
                        <h5 class="alert-heading mb-1">Warning!</h5>
                        <p class="mb-0">This action will permanently delete the department and cannot be undone.</p>
                    </div>
                </div>
            </div>

            <!-- Tabs Navigation -->
            <ul class="nav nav-tabs px-4" id="departmentTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="general-tab" data-bs-toggle="tab"
                            data-bs-target="#general" type="button" role="tab">
                        <i class="fas fa-info-circle me-2"></i>General
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="administration-tab" data-bs-toggle="tab"
                            data-bs-target="#administration" type="button" role="tab">
                        <i class="fas fa-cog me-2"></i>Administration
                    </button>
                </li>
            </ul>

            <!-- Tab Content -->
            <div class="tab-content p-4" id="departmentTabContent">
                <!-- General Tab -->
                <div class="tab-pane fade show active" id="general" role="tabpanel">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="code" class="form-control bg-light" readonly />
                                <label asp-for="code" class="form-label"></label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Name" class="form-control bg-light" readonly />
                                <label asp-for="Name" class="form-label"></label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <textarea asp-for="Description" class="form-control bg-light"
                                          style="height: 100px" readonly></textarea>
                                <label asp-for="Description" class="form-label"></label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="DateOfCreation" class="form-control bg-light" readonly />
                                <label asp-for="DateOfCreation" class="form-label"></label>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Administration Tab -->
                <div class="tab-pane fade" id="administration" role="tabpanel">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="CreatedBy" class="form-control bg-light" readonly />
                                <label asp-for="CreatedBy" class="form-label"></label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="DateOfCreation" class="form-control bg-light" readonly />
                                <label class="form-label">Created On</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="LastModifiedBy" class="form-control bg-light" readonly />
                                <label asp-for="LastModifiedBy" class="form-label"></label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="LastModifiedOn" class="form-control bg-light" readonly />
                                <label asp-for="LastModifiedOn" class="form-label"></label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Delete Form -->
            <div class="p-4 border-top">
                <form method="post" asp-controller="Department" asp-action="Delete" asp-route-id="@Model.ID">
                    <div class="d-flex justify-content-end gap-3">
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-danger rounded-pill px-4">
                            <i class="fas fa-trash-alt me-2"></i>Confirm Delete
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    /* Card Styling */
    .card {
        border: none;
    }

    /* Tab Styling */
    .nav-tabs {
        border-bottom: 1px solid #dee2e6;
    }

        .nav-tabs .nav-link {
            border: none;
            color: #6c757d;
            font-weight: 500;
            padding: 0.75rem 1.5rem;
        }

            .nav-tabs .nav-link.active {
                color: #dc3545;
                background-color: transparent;
                border-bottom: 3px solid #dc3545;
            }

            .nav-tabs .nav-link:hover:not(.active) {
                border-color: transparent;
                color: #dc3545;
            }

    /* Form Styling */
    .form-floating label {
        color: #6c757d;
    }

    .form-control:read-only {
        background-color: #f8f9fa;
    }

    /* Alert Styling */
    .alert-warning {
        background-color: #fff3cd;
        border-left: 4px solid #ffc107;
    }

    /* Responsive Adjustments */
    @@media (max-width: 768px) {
        .card-header .btn {
            margin-top: 0.5rem;
            width: 100%;
        }

        .form-actions {
            flex-direction: column;
            gap: 1rem;
        }
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}