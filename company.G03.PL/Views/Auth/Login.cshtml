@using company.G03.PL.Models.Auth
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout1.cshtml";
}

<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                     class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                
				<h1 class="fw-normal mb-5 text-center" style="letter-spacing: 1px;">Welcome back</h1>
                <div asp-validation-summary="ModelOnly"></div>
                <form asp-action="Login" method="post">
                    <!-- Email input -->
                    <div data-mdb-input-init class="form-outline mb-4">
                        <input asp-for="Email" class="form-control form-control-lg" placeholder="Your Email"/>
                    </div>

                    <!-- Password input -->
                    <div data-mdb-input-init class="form-outline mb-4">
                        <input asp-for="Password" class="form-control form-control-lg" placeholder="Password" />
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <!-- Checkbox -->
                        <div class="form-check">
                            <input asp-for="RememberMe" class="form-check-input"/>
                            <label asp-for="RememberMe" class="form-check-label"> Remember me </label>
                        </div>
                        <a asp-action="ResetPassword">Forgot password?</a>
                    </div>

                    <!-- Submit button -->
                    <input type="submit" class=" w-100 btn btn-primary py-3 px-5 text-white" value="Login" />

                    <div class="divider d-flex align-items-center my-4">
                        <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
                    </div>

                    <a data-mdb-ripple-init class="btn btn-primary btn-lg btn-block" style="background-color: #3b5998" href="#!"
                       role="button">
                        <i class="fab fa-facebook-f me-2"></i>Continue with Facebook
                    </a>
                    <a data-mdb-ripple-init class="btn btn-primary btn-lg btn-block" style="background-color: #55acee" href="#!"
                       role="button">
                        <i class="fab fa-twitter me-2"></i>Continue with Twitter
                    </a>

                </form>
            </div>
        </div>
    </div>
</section>
