@using company.G03.PL.Models.Auth
@model ResetViewModel;
@{
    ViewData["Title"] = "EmailSent";
    Layout = "~/Views/Shared/_AuthLayout1.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        :root {
            --primary: #6366f1;
            --primary-light: #e0e7ff;
            --dark: #1e293b;
            --light: #f8fafc;
            --gray: #94a3b8;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--light);
            color: var(--dark);
            min-height: 100vh;
            display: flex;
            align-items: center;
        }

        .confirmation-container {
            max-width: 500px;
            margin: 0 auto;
            text-align: center;
            padding: 2rem;
        }

        .confirmation-card {
            background: white;
            border-radius: 16px;
            padding: 3rem 2rem;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        }

        .confirmation-icon {
            width: 80px;
            height: 80px;
            background-color: var(--primary-light);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            color: var(--primary);
            font-size: 2rem;
        }

        .confirmation-title {
            font-weight: 700;
            font-size: 1.75rem;
            margin-bottom: 1rem;
        }

        .confirmation-message {
            color: var(--gray);
            font-size: 1.1rem;
            margin-bottom: 2rem;
            line-height: 1.6;
        }

        .email-highlight {
            font-weight: 600;
            color: var(--dark);
            background-color: var(--primary-light);
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
            display: inline-block;
            margin: 0.5rem 0;
        }

        .btn-primary {
            background-color: var(--primary);
            border-color: var(--primary);
            padding: 0.75rem 1.5rem;
            font-weight: 500;
            border-radius: 8px;
            transition: all 0.3s;
        }

        .btn-primary:hover {
            background-color: #4f46e5;
            border-color: #4f46e5;
            transform: translateY(-1px);
        }

        .resend-link {
            margin-top: 1.5rem;
            display: block;
            color: var(--gray);
        }

        .resend-link a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 500;
        }

        .back-to-login {
            margin-top: 2rem;
            color: var(--gray);
        }

        .back-to-login a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 500;
        }
    </style>
</head>
<body class="d-flex justify-content-center align-content-center">
    <div class="container">
        <div class="confirmation-container">
            <div class="confirmation-card">
                <div class="confirmation-icon">
                    <i class="fas fa-paper-plane"></i>
                </div>

                <h1 class="confirmation-title">Check Your Email</h1>

                <p class="confirmation-message">
                    We've sent a password reset link to<br>
                    <span class="email-highlight">@Model.Email</span>
                </p>
                <div class="d-grid gap-2">
                    <a href="https://mail.google.com/mail/u/0/#inbox" class="btn btn-primary">
                        <i class="fas fa-envelope me-2"></i> Open Email App
                    </a>
                </div>
                
                <div class="back-to-login">
                    <a asp-action="Login"><i class="fas fa-arrow-left me-2"></i>Back to login</a>
                </div>
            </div>
        </div>
    </div>

</body>
</html>

