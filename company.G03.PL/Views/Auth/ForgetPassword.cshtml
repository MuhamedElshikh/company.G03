
@using company.G03.PL.Views.Auth
@model ForgetPasword;
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout1.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    
    <style>
        :root {
            --primary: #4e73df;
            --primary-hover: #2e59d9;
            --secondary: #f8f9fc;
            --dark: #5a5c69;
            --light: #f8f9fc;
            --success: #1cc88a;
        }
        
        body {
            background-color: var(--secondary);
            font-family: 'Nunito', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            display: flex;
            align-items: center;
            min-height: 100vh;
        }
        
        .password-container {
            max-width: 500px;
            margin: 0 auto;
        }
        
        .password-card {
            border: 0;
            border-radius: 1rem;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            overflow: hidden;
        }
        
        .password-header {
            background-color: var(--primary);
            color: white;
            padding: 1.5rem;
            text-align: center;
        }
        
        .password-body {
            padding: 2rem;
            background-color: white;
        }
        
        .form-control {
            padding: 0.75rem 1rem;
            border-radius: 0.35rem;
        }
        
        .form-control:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
        }
        
        .password-meter {
            height: 5px;
            background-color: #e9ecef;
            margin-top: 0.5rem;
            margin-bottom: 1rem;
            border-radius: 3px;
            overflow: hidden;
        }
        
        .password-meter-bar {
            height: 100%;
            width: 0;
            transition: width 0.3s ease;
        }
        
        .password-requirements {
            font-size: 0.875rem;
            color: var(--dark);
            margin-bottom: 1.5rem;
        }
        
        .password-requirements li {
            margin-bottom: 0.5rem;
            color: #858796;
        }
        
        .password-requirements li.valid {
            color: var(--success);
        }
        
        .password-requirements li i {
            margin-right: 0.5rem;
        }
        
        .btn-primary {
            background-color: var(--primary);
            border-color: var(--primary);
            padding: 0.75rem;
            font-weight: 600;
        }
        
        .btn-primary:hover {
            background-color: var(--primary-hover);
            border-color: var(--primary-hover);
        }
        
        .toggle-password {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: var(--dark);
        }
        
        .input-group-text {
            background-color: white;
        }
    </style>
</head>
<body class="d-flex justify-content-center align-content-center">
    <div class="container password-container">
        <div class="card password-card">
            <div class="password-header">
                <h2><i class="fas fa-key me-2"></i>Create New Password</h2>
            </div>
            <div class="card-body password-body">
                <p class="text-muted mb-4">Please create a new password for your account.</p>
                
                <form asp-action="ForgetPassword" method="post" id="newPasswordForm">
                    <div class="mb-3 position-relative">
                        <label for="newPassword" class="form-label">New Password</label>
                        <div class="input-group">
                            <input asp-for="Password" placeholder="Enter new password" required>
                            <span class="toggle-password" onclick="togglePassword('newPassword')">
                                <i class="far fa-eye"></i>
                            </span>
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div class="password-meter">
                            <div class="password-meter-bar" id="passwordStrength"></div>
                        </div>
                    </div>
                    
                    <div class="mb-4 position-relative">
                        <label for="confirmPassword" class="form-label">Confirm New Password</label>
                        <div class="input-group">
                            <input asp-for="ConfirmPassword" placeholder="Confirm new password" required>
                            <span class="toggle-password" onclick="togglePassword('confirmPassword')">
                                <i class="far fa-eye"></i>
                            </span>
                            <span asp-validation-for="ConfirmPassword"></span>
                        </div>
                       
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Update Password
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</body>
</html>

