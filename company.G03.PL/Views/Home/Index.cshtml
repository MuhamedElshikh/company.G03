@{
    ViewData["Title"] = "Home Page";
}
<div class="d-flex flex-column overflow-hidden justify-content-center align-items-center vw-100 vh-100" style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);">
    <div class="text-center animate__animated animate__fadeIn">
        <h1 style="font-size: 5rem; letter-spacing: 2px" class="mb-4 text-white fw-bold">
            Welcome to <span class="text-success">Company</span>X
        </h1>

        <div class="position-relative d-inline-block">
            <p style="font-size: 2.5rem" class="d-inline-block px-5 py-4 text-white bg-dark bg-opacity-50 rounded-pill border border-success border-2">
                Management System Portal
            </p>
            <div class="position-absolute top-0 start-0 w-100 h-100 rounded-pill bg-success opacity-25" style="z-index: -1; filter: blur(8px);"></div>
        </div>

        <div class="mt-5 pt-4">
            <a asp-controller="Department" asp-action="Index" class="btn btn-success btn-lg px-5 py-3 rounded-pill fw-bold me-3" style="font-size: 1.5rem">
                Get Started
            </a>
            <button class="btn btn-outline-light btn-lg px-5 py-3 rounded-pill fw-bold" style="font-size: 1.5rem">
                Learn More
            </button>
        </div>
    </div>

    <!-- Animated background elements -->
    <div class="position-fixed top-0 start-0 w-100 h-100" style="z-index: -1; pointer-events: none;">
        <div class="position-absolute" style="top: 20%; left: 10%; width: 100px; height: 100px; background: rgba(40, 167, 69, 0.1); border-radius: 50%; filter: blur(30px);"></div>
        <div class="position-absolute" style="bottom: 15%; right: 10%; width: 150px; height: 150px; background: rgba(40, 167, 69, 0.1); border-radius: 50%; filter: blur(40px);"></div>
    </div>
</div>

<!-- Include Animate.css for animations -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />